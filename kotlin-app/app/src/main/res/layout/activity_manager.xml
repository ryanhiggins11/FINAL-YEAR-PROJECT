<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerActivity">

    <!-- Manager Page to add employees, edit employees' details,
                and change location of the workplace -->

    <TextView
        android:id="@+id/managerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="73dp"
        android:text="@string/manager_title"
        android:textColor="@color/blackOlive"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="160dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/managerTitle"
        app:srcCompat="@drawable/executive" />

    <Button
        android:id="@+id/button_changeLocation"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginBottom="112dp"
        android:background="@color/lightBlue"
        android:text="@string/changeLocationButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_addEmployee"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginBottom="320dp"
        android:background="@color/lightBlue"
        android:text="@string/add_employees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_editEmployee"
        android:layout_width="153dp"
        android:layout_height="58dp"
        android:layout_marginBottom="216dp"
        android:background="@color/lightBlue"
        android:text="@string/edit_employees"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>